#  Currency Converter (USD to INR)

def currency_converter(amount):
    # Conversion rate from USD to INR
    conversion_rate = 83.0  
    
    # Convert amount from USD to INR
    converted_amount = amount * conversion_rate
    return converted_amount

def main():
    print("USD to INR Currency Converter")
    
    try:
        amount = float(input("Enter the amount in USD: "))
        result = currency_converter(amount)
        print(f"{amount} USD is equal to {result:.2f} INR")
    except ValueError:
        print("Please enter a valid amount.")

if __name__ == "__main__":
    main()


